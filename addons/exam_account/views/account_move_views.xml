<odoo>
  <record id="view_move_form_exam_inherit" model="ir.ui.view">
    <field name="name">account.move.form.exam.inherit</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">

      <xpath expr="//field[@name='invoice_date']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>
      <xpath expr="//field[@name='invoice_date']" position="after">
        <field name="x_issue_datetime"/>
      </xpath>
      <xpath expr="//field[@name='invoice_user_id']" position="after">
        <field name="x_sale_channel_id"/>
      </xpath>
      <xpath expr="//field[@name='name']" position="after">
        <group>
          <field name="x_series" readonly="1"/>
          <field name="x_correlative" readonly="1"/>
        </group>
      </xpath>
      <xpath expr="//header" position="inside">
        <button name="action_generate_qr" type="object" string="Generar QR" class="oe_highlight" attrs="{'invisible': [('state','not in',('draft','posted'))]}"/>
      </xpath>
      <xpath expr="//notebook" position="inside">
        <page string="Transferencias relacionadas">
          <field name="x_pickings" widget="many2many_tags" options="{'no_create': True}"/>
        </page>
      </xpath>
      <xpath expr="//notebook" position="inside">
        <page string="QR">
          <field name="x_qr_invoice" filename="qr.png" class="oe_avatar"/>
          <label for="x_total_qty"/>
          <field name="x_total_qty" readonly="1"/>
        </page>
      </xpath>

    </field>
  </record>
</odoo>
