<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
  <t t-name="exam_pos.BoletaButtonPatch" owl="1">
    <t t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension">
      <xpath expr=".//div[contains(@class,'actionpad')]" position="inside">
        <button class="button oe_highlight" t-on-click="onClickBoleta">
          <i class="fa fa-receipt" style="margin-right:4px;"/>
          <t t-esc="env._t('Boleta')"/>
        </button>
      </xpath>

    </t>
  </t>
</templates>
